{
    "name": "npanasenko/imagine-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle assists in imagine manipulation using the imagine library",
    "keywords": ["imagine", "image"],
    "homepage": "http://liip.ch",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Liip and other contributors",
            "homepage": "https://github.com/liip/LiipImagineBundle/contributors"
        }
    ],
    "archive": {
        "exclude": ["/Tests"]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/padivan/Imagine"
        }
    ],
    "require": {
        "php":                      ">=5.3.2",
        "imagine/imagine":          ">=0.7",
        "symfony/finder":           "2.8.16|~3.0",
        "symfony/filesystem":       "2.8.16|~3.0",
        "symfony/options-resolver": "2.8.16|~3.0",
        "symfony/framework-bundle": "2.8.16|~3.0",
        "symfony/templating": "2.8.16|~3.0"
    },

    "require-dev": {
        "phpunit/phpunit":          "~3.7",
        "symfony/browser-kit":      "2.8.16|~3.0",
        "doctrine/orm":             "2.4.7",
        "symfony/yaml":             "2.8.16|~3.0",
        "symfony/form":             "2.8.16|~3.0",
        "twig/twig":                "~2.0",
        "doctrine/cache":           "~1.1",
        "aws/aws-sdk-php":          "3.21.6",
        "psr/log":                  "~1.0",
        "ext-gd":                   "*",
        "symfony/console":          "2.8.16|~3.0"
    },

    "suggest": {
        "twig/twig":                "If you'd want to use some handy twig filters",
        "aws/aws-sdk-php":          "Add it if you'd like to use aws v2 resolver",
        "monolog/monolog":          "If you'd want to write logs"
    },

    "autoload": {
        "psr-0": { "Liip\\ImagineBundle": "" }
    },

    "config": {
        "bin-dir": "bin"
    },

    "target-dir": "Liip/ImagineBundle",

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-0.x": "0.x-dev"
        }
    }
}
